<div class = "container" >
  <h2 class = "text-center mt-4" >Create a New User</h2><br>

  <% if @user.errors.any? %>
    <h4> The following errors prevented the user details from being saved ! </h4>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li class = "text-danger"> <%= msg %> </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with(model:@user, local: true, data: {turbo: false}) do |f| %>
    <div class = "field form-group" >
      <strong><%= f.label :user_name %></strong>
      <%= f.text_field :user_name, class:"form-control" %>
    </div><br>

    <div class = "field form-group" >
      <strong><%= f.label :user_email %></strong>
      <%= f.email_field :user_email, class:"form-control" %>
    </div><br>

    <div class="text-center">
      <div class = "action" >
        <%= f.submit "Create User", class:"btn btn-success" %>
      </div>
    </div><br>

    <div class="text-center">
      <div class = "field form-group" >
        <%= link_to 'Dismiss', { controller: 'users', action: 'index'}, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>

</div>
